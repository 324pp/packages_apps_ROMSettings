<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        android:key="bootani"
        android:title="@string/bootani_cat">

        <Preference
            android:key="custom_bootanimation"
            android:title="@string/custom_bootanimation_title"
            android:summary="@string/custom_bootanimation_summary" />

         <CheckBoxPreference
            android:key="disable_bootanimation"
            android:title="@string/disable_bootanimation_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification"
        android:title="@string/notification_cat">

        <Preference
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

        <CheckBoxPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="vibrate_notif_expand"
            android:title="@string/vibrate_notif_expand_title"
            android:summary="@string/vibrate_notif_expand_summary" />

		<CheckBoxPreference
            android:key="ime_switcher"
            android:title="@string/ime_switcher_title"
            android:summary="@string/ime_switcher_summary"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="statusbar_brightness_slider"
            android:title="@string/brightness_slider_title"
            android:summary="@string/brightness_slider_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="navbar"
        android:title="@string/navbar_cat">


        <CheckBoxPreference
            android:key="recent_kill_all"
            android:title="@string/recent_kill_all"
            android:summary="@string/recent_kill_all_summary" />

        <CheckBoxPreference
            android:key="ram_usage_bar"
            android:title="@string/ram_bar"
            android:summary="@string/ram_bar_summary" />

       <!-- <CheckBoxPreference
            android:key="kill_app_longpress_back"
            android:title="@string/kill_app_longpress_back"
            android:summary="@string/kill_app_longpress_back_summary" /> -->

        <ListPreference
            android:key="user_mode_ui"
            android:title="@string/user_mode_ui"
            android:summary="@string/user_mode_ui_summary"
            android:entries="@array/user_mode_ui_entries"
            android:entryValues="@array/user_mode_ui_values" />

		<CheckBoxPreference
            android:key="force_dualpanel"
            android:title="@string/multipane_ui"
            android:summary="@string/multipane_ui_summary"
            android:defaultValue="false" />
            
        <CheckBoxPreference
            android:key="hide_extras"
            android:title= "@string/hide_extras"
            android:summary= "@string/hide_extras_summary"
            android:defaultValue="false" />
            
        <Preference
            android:key="lcd_density_setup"
            android:title="@string/lcd_density_title"
            android:summary="@string/lcd_density_summary" />

     </PreferenceCategory>
     
     <PreferenceCategory
        android:key="toolbar_pie_controls"
        android:title="@string/pie_controls_title" />

        <CheckBoxPreference
            android:key="pie_controls"
            android:title="@string/pie_controls_title"
            android:summary="@string/pie_controls_summary"
            android:defaultValue="false" />
            
        <ListPreference
            android:key="pie_trigger"
            android:dialogTitle="@string/pie_trigger_title"
            android:title="@string/pie_trigger_title"
            android:summary="@string/pie_trigger_summary"
            android:entries="@array/entries_pie_trigger"
            android:entryValues="@array/values_pie_trigger" />

        <ListPreference
            android:key="pie_gravity"
            android:dialogTitle="@string/pie_gravity_title"
            android:title="@string/pie_gravity_title"
            android:summary="@string/pie_gravity_summary"
            android:entries="@array/entries_pie_gravity"
            android:entryValues="@array/values_pie_gravity" />

        <ListPreference
            android:key="pie_size"
            android:dialogTitle="@string/pie_size_title"
            android:title="@string/pie_size_title"
            android:summary="@string/pie_size_summary"
            android:entries="@array/entries_pie_size"
            android:entryValues="@array/values_pie_size" />

        <ListPreference
            android:key="pie_mode"
            android:dialogTitle="@string/pie_mode_title"
            android:title="@string/pie_mode_title"
            android:summary="@string/pie_mode_summary"
            android:entries="@array/entries_pie_mode"
            android:entryValues="@array/values_pie_mode" />
            
        <ListPreference
            android:key="pie_gap"
            android:dialogTitle="@string/pie_gap_title"
            android:title="@string/pie_gap_title"
            android:summary="@string/pie_gap_summary"
            android:entries="@array/entries_pie_gap"
            android:entryValues="@array/values_pie_gap" />
            
        <CheckBoxPreference
            android:key="pie_menu"
            android:title="@string/pie_menu_title"
            android:summary="@string/pie_menu_summary" />

        <CheckBoxPreference
            android:key="pie_search"
            android:title="@string/pie_search_title"
            android:summary="@string/pie_search_summary" />

        <CheckBoxPreference
            android:key="pie_notifications"
            android:title="@string/pie_notifications_title"
            android:summary="@string/pie_notifications_summary"
            android:defaultValue="false" />
            
        <PreferenceScreen
            android:key="pie_color"
            android:title="@string/pie_color_title"
            android:fragment="com.aokp.romcontrol.fragments.PieColor" />

     <PreferenceCategory
            android:key="misc"
            android:title="@string/misc_short">

        <CheckBoxPreference
            android:key="show_overflow"
            android:title="@string/show_overflow_title"
            android:summary="@string/show_overflow_summary"
            android:defaultValue="false" />

         <CheckBoxPreference
            android:key="rotate_180"
            android:title="@string/rotate_180_title"
            android:summary="@string/rotate_180_summary" />

       <!-- <CheckBoxPreference
            android:key="use_alt_resolver"
            android:title="@string/alt_resolver"
            android:summary="@string/alt_resolver_summary"
            android:defaultValue="false" /> -->

        <CheckBoxPreference
            android:key="wakeup_when_plugged_unplugged"
            android:title="@string/wakeup_when_plugged_unplugged_title"
            android:summary="@string/wakeup_when_plugged_unplugged_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>
