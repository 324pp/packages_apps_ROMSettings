<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:aokp="http://schemas.android.com/apk/res/com.aokp.romcontrol">

    <Preference
        android:key="enabled_toggles"
        android:summary="@string/enabled_toggles_summary"
        android:title="@string/enabled_toggles_title" />

    <Preference
        android:key="toggles"
        android:summary="@string/toggles_order_summary"
        android:title="@string/toggles_order_title" />

    <ListPreference
        android:entries="@array/toggles_per_row_entries"
        android:entryValues="@array/toggles_per_row_values"
        android:key="toggles_per_row"
        android:title="@string/toggles_per_row_title"
        android:summary="@string/toggles_per_row_summary" />

	<ListPreference
            android:key="navbar_bg_style"
            android:layout="?android:attr/preferenceLayoutChild"
            android:persistent="true"
            android:entries="@array/navbar_background_entries"
            android:entryValues="@array/navbar_background_values"
            android:title="@string/navbar_background_style" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="navigation_bar_background_color"
            android:shouldDisableView="true"
            android:layout="?android:attr/preferenceLayoutChild"
            android:persistent="true"
            android:title="@string/navbar_bg_color"
            android:defaultValue="#000000"
            alphaSlider="true" />

</PreferenceScreen>
